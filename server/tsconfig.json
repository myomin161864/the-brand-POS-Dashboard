{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"lib": ["ES6"],
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"types": ["node"]
	},
	"include": ["src/**/*", "prisma/**/*"],
	"exclude": ["node_modules", "dist"]
}

